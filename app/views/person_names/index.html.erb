<p id="notice"><%= notice %></p>

<h1><%= @person.id %></h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @names.each do |name| %>
      <tr>
        <td><%= name.core_name_type.display %></td>
        <td><%= name.first %></td>
        <td><%= name.middle %></td>
        <td><%= name.last %></td>
        <td><%= link_to 'Edit', edit_person_person_name_path(@person, name) %></td>
        <% if name.core_name_type_id != 1 %>
          <td><%= link_to 'Destroy', [@person, name], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= link_to 'New Name Type', new_person_person_name_path %> |
  <%= link_to 'Back', person_path(@person) %>
</div>

