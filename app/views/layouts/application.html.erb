<!DOCTYPE html>
<html>
  <head>
    <title>RailsUERP</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i&amp;subset=latin-ext' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand">
      <%= link_to 'RailsUERP', root_path, {class: 'navbar-brand'} %>
      <div>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'People', people_path, {class: 'nav-link'} %>
          </li>
        </ul>
      </div>
    </nav>
    <div class="page">
      <%= yield %>
    </div>
  </body>
</html>
